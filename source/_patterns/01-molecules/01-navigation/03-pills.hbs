<ul class="nav nav-pills" id="myPill">
    {{#pills}}
        <li class="nav-item">
            <a class="nav-link  {{#if active}}active{{/if}}  {{#if disabled}}disabled{{/if}}" id="{{id}}-pill"
                data-toggle="pill" href="{{href}}" role="tab">{{text}}</a>
        </li>
    {{/pills}}
</ul>
<div class="tab-content mt-2" id="myPillContent">
    {{#pills}}
        <div class="tab-pane fade {{#if active}} show active{{/if}}" id="{{id}}" role="tabpanel">
            <p>
                {{content}}
            </p>
        </div>
    {{/pills}}
</div>